---
import type { CollectionEntry } from "astro:content";
import StyledDate from "../components/date.astro";

import "../styles/global.css";
import "../styles/post.css";

type Props = CollectionEntry<"blog">["data"];
const { title, description, createdAt, updatedAt, tags } = Astro.props;
---

<section
  class="bg-black flex justify-center w-full min-h-screen h-full py-2 m-0"
>
  <article class="max-w-4xl w-full bg-[#171717] text-stone-50 p-10 rounded">
    <header>
      <h1 class="text-5xl font-brand font-semibold">{title}</h1>
      <p>
        <span class="text-gray-300">{description}</span> -
        <span class="text-gray-200 font-mono"
          ><StyledDate date={updatedAt} /></span
        >
      </p>
      {
        tags && (
          <div class="my-2 font-mono">
            {tags.map((tag) => (
              <span class="bg-yellow-200 text-black rounded px-2 mr-1">
                {tag}
              </span>
            ))}
          </div>
        )
      }
    </header>

    <div class="my-4 text-lg post">
      <slot />
    </div>
  </article>
</section>
